# HubSpot Configuration
HUBSPOT_PORTAL_ID=your_portal_id_here
HUBSPOT_PRIVATE_APP_ACCESS_TOKEN=your_private_app_token_here
HUBSPOT_DEVELOPER_API_KEY=your_developer_api_key_here

# Environment
NODE_ENV=development

# API Configuration
API_BASE_URL=https://api.hubapi.com
API_RATE_LIMIT_PER_SECOND=10
API_DAILY_LIMIT=40000

# Cache Configuration
CACHE_TTL=300
CACHE_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_REQUEST_DETAILS=true

# Feature Flags
ENABLE_BATCH_OPERATIONS=false
ENABLE_ADVANCED_SEARCH=false
ENABLE_AUDIT_LOGGING=true
